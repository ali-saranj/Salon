<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5FF5722"
    tools:context=".ui.activity.Show_single_Salon">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/image_single"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:src="@drawable/image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/Title_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_single"
                android:layout_marginTop="16dp"
                android:text="عنوان"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="#FF5722" />

            <TextView
                android:id="@+id/Area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Title_single"
                android:layout_marginTop="8dp"
                android:text="منطقه"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_alignParentEnd="true"
                android:textColor="#FF5722" />

            <TextView
                android:id="@+id/Address_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Area"
                android:layout_marginTop="8dp"
                android:inputType="text"
                android:text="آدرس"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_alignParentEnd="true"
                android:textColor="#FF5722" />

            <TextView
                android:id="@+id/phone_number_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Address_single"
                android:layout_marginTop="15dp"
                android:text="شماره تلفن"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_alignParentEnd="true"
                android:textColor="#FF5722" />

            <Button
                android:id="@+id/btn_for_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_number_single"
                android:layout_marginTop="25dp"
                android:textSize="18sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="شماره تماس"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>