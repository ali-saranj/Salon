<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.salon.data.viewmodel.SalonCard" />

        <variable
            name="salon"
            type="SalonCard" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="right">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_salon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/rectangle_7"
                    imageUrl="@{salon.image}"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_salon_backgrand"
            android:elevation="7dp"
            android:singleLine="true"
            android:maxWidth="100dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:fontFamily="@font/iransans"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@id/card_salon"
            app:layout_constraintLeft_toLeftOf="@id/card_salon"
            app:layout_constraintRight_toRightOf="@id/card_salon"
            app:layout_constraintTop_toBottomOf="@id/card_salon"
            tools:text="سالن فوتبال"
            android:text="@{salon.title}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>